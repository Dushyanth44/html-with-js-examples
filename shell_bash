2.
echo "enter lucky number"
read n
num2=100
ans=$((n / num2))
case $ans in
0|1|200)
echo "you got 1st prize";;
2|3|4|500)
echo "you got 2nd prize";;
5|7|8|9|1000)
echo "you got 3rd prize";;
*)
echo "try next time";;
esac


